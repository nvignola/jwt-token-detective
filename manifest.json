{
  "manifest_version": 3,
  "name": "JWT Token Detective",
  "version": "1.0.0",
  "description": "Detects and manages JWT tokens from network requests",

  "permissions": ["webRequest", "storage", "activeTab"],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "JWT Token Detective",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["src/popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
